D SEGMENT
PASS1 DB '12AB'
N EQU $-PASS1
D1 DB 'PASSWORD?', 0DH, 0AH, '$'
PASS2 DB 20
DB 0
DB 20 DUP(0)
D2 DB 0DH,0AH, 'OK$'
D ENDS
C SEGMENT
ASSUME CS:C, DS:D, ES:D
BG: MOV AX,D
MOV DS,AX
MOV ES,AX
LEA DX,D1
MOV AH,9
INT 21H
LEA DX,PASS2
MOV AH,0AH
INT 21H
LEA SI,PASS1
LEA DI,PASS2
CMP BYTE PTR[DI+1],N
JNE LAST
MOV CX,N
LEA DI,PASS2+2
CLD
REPZ CMPSB
JZ DISOK
LAST: MOV AH,4CH
INT 21H
DISOK: LEA DX,D2
MOV AH,9
INT 21H
JMP LAST
C ENDS
END BG

